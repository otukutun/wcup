<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.vogella.android.weather.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.vogella.android.weather.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.vogella.android.weather.app.TodaysMatchActivity"
            android:label="@string/title_activity_todays_match" >
        </activity>
        <activity
            android:name="de.vogella.android.weather.app.TomrrowsMatchActivity"
            android:label="@string/title_activity_tomrrows_match" >
        </activity>
        <activity
            android:name="de.vogella.android.weather.app.ListTeamsActivity"
            android:label="@string/title_activity_list_teams" >
        </activity>
    </application>

</manifest>
